{% extends 'base.html.twig' %}

{% block title %}{{ movie.name }} {{ parent()}}{% endblock %}

{% block body %}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Year</th>
        <th scope="col">Poster</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ movie.name }}</td>
            <td>{{ movie.description }}</td>
            <td>{{ movie.year }}</td>
            <td><img src="{{ poster }}" /></td>
        </tr>
    </tbody>
</table>
{% endblock %}
